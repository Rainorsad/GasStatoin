<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_forgetmain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="86dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edit_forgetphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="56dp"
        android:background="@null"
        android:hint="@string/forget_name"
        android:textColorHint="@color/BFC0BF"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="18dp"
        android:background="@color/D3D3D3" />

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_forgetcode"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="@string/forget_code"
                android:textColorHint="@color/BFC0BF"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/D3D3D3" />

        </LinearLayout>

        <Button
            android:id="@+id/forget_butcode"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/gorget_butcode"
            android:text="获取验证码"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/common_textsize_12"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_forgetidentitycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="@string/forget_identitycode"
        android:textColorHint="@color/BFC0BF"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/D3D3D3" />

    <EditText
        android:id="@+id/edit_forgetnewpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="@string/forget_newpass"
        android:textColorHint="@color/BFC0BF"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/D3D3D3" />

    <EditText
        android:id="@+id/edit_forgetsurepass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="@string/forget_surepass"
        android:textColorHint="@color/BFC0BF"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/D3D3D3" />

    <Button
        android:id="@+id/forget_but"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/CFE7FB"
        android:gravity="center"
        android:text="@string/forget_button"
        android:textColor="@color/A1A1A1" />
</LinearLayout>